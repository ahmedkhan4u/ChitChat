<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".ClickPostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/click_post_image"
            android:src="@drawable/icon_post_image"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:background="@color/lightGrey"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_comment"
                android:hint="Post description"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:id="@+id/click_post_edit_desc"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:text="Edit"
                android:textAllCaps="false"
                android:id="@+id/click_post_edit_button"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_background"
                android:textSize="18sp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:text="Delete"
                android:textAllCaps="false"
                android:id="@+id/click_post_delete_button"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_background"
                android:textSize="18sp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>